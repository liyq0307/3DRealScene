  <!-- OSG 路径配置：优先使用环境变量 OSG_ROOT，否则使用默认路径 -->
  <PropertyGroup>
    <OSG_PATH Condition="'$(OSG_ROOT)' != ''">$(OSG_ROOT)</OSG_PATH>
    <OSG_PATH Condition="'$(OSG_ROOT)' == ''">$(MSBuildThisFileDirectory)..\3dParty\OSG</OSG_PATH>
    <OutDir>..\..\..\bin\$(Configuration)\</OutDir>
    <IntDir>obj\$(Configuration)\</IntDir>
  </PropertyGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <ClCompile>
      <WarningLevel>Level3</WarningLevel>
      <PreprocessorDefinitions>_DEBUG;NOMINMAX;WIN32_LEAN_AND_MEAN;_CRT_SECURE_NO_WARNINGS;%(PreprocessorDefinitions)</PreprocessorDefinitions>
      <AdditionalIncludeDirectories>$(OSG_PATH)\include;%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
      <AdditionalOptions>/utf-8 /Zc:wchar_t %(AdditionalOptions)</AdditionalOptions>
      <DisableSpecificWarnings>4819</DisableSpecificWarnings>
      <ForcedIncludeFiles>windows.h</ForcedIncludeFiles>
      <LanguageStandard>stdcpp17</LanguageStandard>
    </ClCompile>
    <Link>
      <AdditionalLibraryDirectories>$(OSG_PATH)\lib;%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
      <AdditionalDependencies>osgd.lib;osgDBd.lib;osgUtild.lib;OpenThreadsd.lib;%(AdditionalDependencies)</AdditionalDependencies>
      <AdditionalOptions>/ignore:4248 %(AdditionalOptions)</AdditionalOptions>
    </Link>
    <PostBuildEvent>
      <Command>echo [自动部署] 正在部署 Debug 配置...
if not exist "$(OutDir)net9.0\" mkdir "$(OutDir)net9.0\"
copy /Y "$(TargetPath)" "$(OutDir)net9.0\" &gt;nul
echo [1/3] 已复制 RealScene3D.Lib.OSGB.dll
copy /Y "$(OSG_PATH)\bin\osgd.dll" "$(OutDir)net9.0\" &gt;nul 2&gt;&amp;1
copy /Y "$(OSG_PATH)\bin\osgDBd.dll" "$(OutDir)net9.0\" &gt;nul 2&gt;&amp;1
copy /Y "$(OSG_PATH)\bin\osgUtild.dll" "$(OutDir)net9.0\" &gt;nul 2&gt;&amp;1
copy /Y "$(OSG_PATH)\bin\OpenThreadsd.dll" "$(OutDir)net9.0\" &gt;nul 2&gt;&amp;1
echo [2/3] 已复制 OSG DLL
xcopy /E /I /Q /Y "$(OSG_PATH)\bin\osgPlugins-*" "$(OutDir)net9.0\osgPlugins-*" &gt;nul 2&gt;&amp;1
echo [3/3] 已复制 OSG 插件
echo [完成] Debug 部署成功！</Command>
      <Message>自动部署 RealScene3D.Lib.OSGB.dll 和 OSG 依赖 (Debug)</Message>
    </PostBuildEvent>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
